<?xml version="1.0" encoding="utf-8"?>
<query>
  <df>w_lemma</df>
  <q default="true">*</q>
  <fq escape="false">document_type:word</fq>
  <facet>true</facet>  
  <facet.field>w_number</facet.field>
  <facet.field>w_gender</facet.field>
  <facet.field>w_case</facet.field>
  <facet.field>w_degree</facet.field>  
  <facet.field>w_relation</facet.field>
  <facet.field>w_is_in_np</facet.field>
  <facet.field>w_is_in_hyperbaton</facet.field>
  <facet.limit>-1</facet.limit>
  <facet.mincount>1</facet.mincount>
  <facet.sort>index</facet.sort>
  <!-- The number of rows returned by Solr at once (that is the number
       displayed per page of results). -->
  <rows default="true">1</rows>
</query>
