<?xml version="1.0" encoding="UTF-8"?>
<kiln:root xmlns:tei="http://www.tei-c.org/ns/1.0"
           xmlns:xi="http://www.w3.org/2001/XInclude"
           xmlns:kiln="http://www.kcl.ac.uk/artshums/depts/ddh/kiln/ns/1.0"
           xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
  
  <xsl:param name="lemma"/>

  <xsl:import href="cocoon://_internal/template/xsl/stylesheets/treebank/adjective-lemma-summary.xsl" />

  <kiln:parent>
    <xi:include href="base.xml" />
  </kiln:parent>

  <kiln:child>

    <kiln:block name="title">
      <kiln:super />
      <xsl:text>Adjective summary for lemma </xsl:text>
      <xsl:value-of select="$lemma"/>
    </kiln:block>

    <kiln:block name="page-heading">
      <kiln:super />
      <xsl:text>Adjective summary for lemma </xsl:text>
      <xsl:value-of select="$lemma"/>
    </kiln:block>

    <kiln:block name="content">
      <xsl:call-template name="adjective-lemma-summary"/>
    </kiln:block>
  </kiln:child>

</kiln:root>
